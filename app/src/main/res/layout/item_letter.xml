<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.CardViewItemLetter"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_img_ref"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/frozen" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/bg_item_carta"
        android:orientation="vertical"
        android:padding="@dimen/general_padding">

        <TextView
            android:id="@+id/item_title"
            style="@style/AppTheme.CardViewLetterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Frozen" />

        <TextView
            android:id="@+id/item_description"
            style="@style/AppTheme.CardViewLetterSubTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Descripcion" />

        <TextView
            android:id="@+id/item_price"
            style="@style/AppTheme.CardViewLetterPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:text="$ 2.99" />

    </LinearLayout>

</android.support.v7.widget.CardView>